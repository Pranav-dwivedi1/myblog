    />
    <style>
      :root {
        --primary-color: #4361ee;
        --secondary-color: #3f37c9;
        --accent-color: #4cc9f0;
        --dark-bg: #121212;
        --card-bg: #1e1e1e;
        --text-light: #e9ecef;
        --text-muted: #ffffff;
      }

      body {
        font-family: "Poppins", sans-serif;
        background-color: var(--dark-bg);
        color: var(--text-light);
        overflow-x: hidden;
      }

      .hero-section {
        background: linear-gradient(
          135deg,
          var(--primary-color),
          var(--secondary-color)
        );
        position: relative;
        overflow: hidden;
      }

      .hero-section::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: url("data:image/svg+xml;base64,");
        opacity: 0.6;
      }

      .card {
        background-color: var(--card-bg);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 12px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
      }

      .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.3);
      }

      #map {
        width: 100%;
        height: 450px;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.1);
      }

      .contact-icon {
        font-size: 1.75rem;
        background: linear-gradient(
          135deg,
          var(--primary-color),
          var(--accent-color)
        );
        -webkit-background-clip: text;
        background-clip: text;
        -webkit-text-fill-color: transparent;
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        background-color: rgba(67, 97, 238, 0.1);
        margin-right: 1rem;
        flex-shrink: 0;
      }

      .form-control,
      .form-control:focus {
        background-color: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: var(--text-light);
        padding: 12px 15px;
        border-radius: 8px;
        transition: all 0.3s ease;
      }

      .form-control:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.25rem rgba(67, 97, 238, 0.25);
        background-color: rgba(255, 255, 255, 0.08);
      }

      .btn-primary {
        background: linear-gradient(
          135deg,
          var(--primary-color),
          var(--secondary-color)
        );
        border: none;
        padding: 12px 28px;
        border-radius: 8px;
        font-weight: 500;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(67, 97, 238, 0.3);
      }

      .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(67, 97, 238, 0.4);
      }

      .btn-outline-light {
        border: 1px solid rgba(255, 255, 255, 0.2);
        transition: all 0.3s ease;
      }

      .btn-outline-light:hover {
        background-color: rgba(255, 255, 255, 0.1);
        border-color: rgba(255, 255, 255, 0.3);
      }

      .social-links a {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: rgba(255, 255, 255, 0.05);
        color: var(--text-muted);
        transition: all 0.3s ease;
        margin-right: 10px;
      }

      .social-links a:hover {
        background-color: var(--primary-color);
        transform: translateY(-3px);
        color: white;
      }

      .social-icon-circle {
        width: 48px; /* size of circle */
        height: 48px;
        border-radius: 50%;
        transition: all 0.3s ease;
        color: #000; /* icon color */
        font-size: 20px;
        background: linear-gradient(
          135deg,
          var(--primary-color),
          var(--accent-color)
        );
        color: white;
        text-decoration: none;
        transition: all 0.3s ease;
        margin: 0 8px;
        box-shadow: 0 4px 15px rgba(67, 97, 238, 0.3);
      }

      .center-icon {
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .social-icon-circle:hover {
        transform: translateY(-5px) scale(1.1);
        box-shadow: 0 8px 25px rgba(67, 97, 238, 0.5);
        color: white;
        text-decoration: none;
      }

      .social-icon-circle i {
        font-size: 1.2rem;
      }

      .section-title {
        position: relative;
        display: inline-block;
        margin-bottom: 2rem;
      }

      .section-title::after {
        content: "";
        position: absolute;
        bottom: -10px;
        left: 0;
        width: 50px;
        height: 3px;
        background: linear-gradient(
          90deg,
          var(--primary-color),
          var(--accent-color)
        );
        border-radius: 3px;
      }

      .toast-container {
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 1100;
      }

      .floating-shape {
        position: absolute;
        opacity: 0.1;
        z-index: 0;
      }

      .shape-1 {
        top: 20%;
        left: 5%;
        width: 150px;
        height: 150px;
        background: radial-gradient(circle, var(--primary-color), transparent);
        border-radius: 50%;
        filter: blur(20px);
      }

      .shape-2 {
        bottom: 10%;
        right: 5%;
        width: 200px;
        height: 200px;
        background: radial-gradient(circle, var(--accent-color), transparent);
        border-radius: 50%;
        filter: blur(30px);
      }

      @media (max-width: 768px) {
        .hero-section {
          padding: 60px 0;
        }

        .contact-icon {
          width: 50px;
          height: 50px;
          font-size: 1.5rem;
        }

        #map {
          width: 80%;
          height: 450px;
        }
      }
    </style>
  </head>
