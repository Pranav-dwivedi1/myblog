</head>
<body>

  <%- include('./partials/head') %>
  <%- include('./partials/nav') %>

  <!-- Hero Section -->
  <section class="py-5 bg-light">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
          <h1 class="display-4 fw-bold mb-3">Hi, I'm <%= user?.fullName || 'Pranav Dwivedi' %></h1>
          <p class="lead mb-4">Full Stack Web Developer (React.js, Next.js, Node.js)</p>
          <div class="d-flex flex-wrap justify-content-center gap-2">
            <a href="mailto:<%= user?.email || 'pranav01dev@gmail.com' %>" class="btn btn-outline-primary btn-sm">
              <i class="fas fa-envelope me-1"></i> <%= user?.email || 'pranav01dev@gmail.com' %>
            </a>
            <a href="tel:<%= user?.phone || '+918770676950' %>" class="btn btn-outline-success btn-sm">
              <i class="fas fa-phone me-1"></i> <%= user?.phone || '+918770676950' %>
            </a>
            <a href="https://linkedin.com/in/pranavdwivedi07/" class="btn btn-outline-info btn-sm" target="_blank">
              <i class="fab fa-linkedin me-1"></i> LinkedIn
            </a>
