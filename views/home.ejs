<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Home page - Blogies</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>

  <body class="bg-dark text-light">
    <%- include('./partials/nav') %>

    <!-- Hero Section -->
    <header class="bg-secondary bg-gradient text-white py-5">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-8 text-center">
            <h1 class="display-4 fw-bold mb-3">Welcome to Blogies</h1>
            <p class="lead mb-4">
              Discover the latest blogs and updates from our community
            </p>
            <form class="d-flex" action="/search" method="GET">
              <input
                class="form-control me-2"
                type="search"
                name="q"
                placeholder="Search blogs..."
                aria-label="Search"
              />
              <button class="btn btn-primary" type="submit">
                <i class="fas fa-search"></i>
              </button>
            </form>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="py-5 text-white">
      <div class="container">
        <div class="row mb-4">
          <div class="col-12">
            <h2 class="fw-bold border-bottom pb-2">Latest Blogs</h2>
          </div>
        </div>

        <!-- Blog Cards Grid -->
        <div class="row g-4">
          <% blogs.forEach(blog => { %>
            <div class="col-12 col-sm-6 col-lg-4 col-xl-3">
              <div class="card h-100 bg-dark border-light shadow">
                <img
                  src="<%= blog.coverImageURL %>"
                  class="card-img-top"
                  alt="<%= blog.title %>"
                  style="height: 200px; object-fit: cover;"
                />
                <div class="card-body d-flex flex-column">
                  <h5 class="card-title text-light"><%= blog.title %></h5>
                  <p
                    class="card-text  flex-grow-1 text-white"
                    style="overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 2; line-clamp: 2; -webkit-box-orient: vertical;"
                  >
                    <%= blog.body.replace(/(<([^>]+)>)/gi, "").substring(0, 300) %>
                  </p>
                  <div class="d-flex justify-content-between align-items-center mt-2">
                    <a href="/blog/<%= blog._id %>" class="btn btn-sm btn-primary">
                      Read More <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                    <small class="">
                      <%= blog.createdAt.toLocaleDateString() %>
                    </small>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        </div>

        <!-- Empty State -->
        <% if (blogs.length === 0) { %>
          <div class="row">
            <div class="col-12 text-center py-5">
              <i class="fas fa-book-open fa-4x mb-3 "></i>
              <h3 class="">No blogs found</h3>
              <p class="">Be the first to create a blog post!</p>
              <a href="/blog/add-new" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> Create Blog
              </a>
            </div>
          </div>
        <% } %>
      </div>
    </main>

    <%- include('./partials/footer') %>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <%- include('./partials/script') %>
  </body>
</html>
